root = true

# Note: end of line changed from PODMASTER's original CRLF to just LF.
# For Changes, this is a Minilla requirement ---
# https://github.com/tokuhirom/Minilla/issues/259 .
# Also, pod2markdown (from Pod::Markdown) adds an extra BEGIN block
# before the `# NAME` header if the file is CRLF-delimited.

[*]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

[*.{bat,vbs,ps1}]
end_of_line = CRLF

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
